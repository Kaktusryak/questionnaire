{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-monorepo/models": ["models/src/index.ts"],
      "@angular-monorepo/questionCard": ["libs/questionCard/src/index.ts"],
      "@angular-monorepo/questionForm": ["libs/questionForm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
